@page "/"
@using PropertyHub.BlazorApp.Services
@using PropertyHub.Application.Services
@inject DashboardClientService DashboardService
@inject NavigationManager Navigation

<PageTitle>PropertyHub Global - Dashboard</PageTitle>

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12 d-flex align-items-center justify-content-between">
            <div>
                <h1 class="h3 mb-2">PropertyHub Global Dashboard</h1>
                <p class="text-muted">Real-time enterprise property management insights</p>
            </div>
            <select class="form-select" style="width: 150px;" @onchange="OnCurrencyChanged">
                <option value="USD">USD ($)</option>
                <option value="EUR">EUR (€)</option>
                <option value="GBP">GBP (£)</option>
                <option value="AED">AED (د.إ)</option>
                <option value="BHD">BHD (BD)</option>
            </select>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="progress my-4" style="height: 4px;">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%"></div>
        </div>
    }
    else if (dashboardData != null)
    {
        <div class="row g-4 mt-2">
            <!-- KPI Cards Row 1 -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title text-primary">Total Properties</h6>
                                <h3 class="mb-2">@dashboardData.PropertyStats.TotalProperties</h3>
                                <p class="card-text mb-0 @(dashboardData.PropertyStats.PercentageChange >= 0 ? "text-success" : "text-danger")">
                                    @(dashboardData.PropertyStats.PercentageChange >= 0 ? "▲" : "▼") @Math.Abs(dashboardData.PropertyStats.PercentageChange)% this month
                                </p>
                            </div>
                            <i class="fas fa-home text-primary" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title text-secondary">Active Leads</h6>
                                <h3 class="mb-2">@dashboardData.LeadStats.ActiveLeads</h3>
                                <p class="card-text mb-0 text-info">
                                    @dashboardData.LeadStats.HighScoreLeads High Score (80+)
                                </p>
                            </div>
                            <i class="fas fa-users text-secondary" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title text-warning">Reservations</h6>
                                <h3 class="mb-2">@dashboardData.ReservationStats.TotalReservations</h3>
                                <p class="card-text mb-0 text-warning">
                                    @dashboardData.ReservationStats.PendingReservations Pending
                                </p>
                            </div>
                            <i class="fas fa-calendar-alt text-warning" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title text-success">Total Revenue</h6>
                                <h3 class="mb-2">@FormatCurrency(dashboardData.FinancialStats.TotalRevenue)</h3>
                                <p class="card-text mb-0 text-success">
                                    Profit: @dashboardData.FinancialStats.ProfitMargin%
                                </p>
                            </div>
                            <i class="fas fa-dollar-sign text-success" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- KPI Cards Row 2 -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body p-3">
                        <p class="text-muted mb-1">Available</p>
                        <h5 class="mb-0">@dashboardData.PropertyStats.AvailableProperties</h5>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body p-3">
                        <p class="text-muted mb-1">Qualified Leads</p>
                        <h5 class="mb-0">@dashboardData.LeadStats.QualifiedLeads</h5>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body p-3">
                        <p class="text-muted mb-1">Confirmed</p>
                        <h5 class="mb-0">@dashboardData.ReservationStats.ConfirmedReservations</h5>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body p-3">
                        <p class="text-muted mb-1">Net Profit</p>
                        <h5 class="mb-0">@FormatCurrency(dashboardData.FinancialStats.NetProfit)</h5>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="col-12 col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h6 class="mb-0">Leads by Segment</h6>
                    </div>
                    <div class="card-body">
                        @if (dashboardData.LeadsBySegment != null && dashboardData.LeadsBySegment.Any())
                        {
                            <div class="text-center text-muted">
                                <i class="fas fa-chart-pie" style="font-size: 4rem; opacity: 0.3;"></i>
                                <p class="mt-2">Chart visualization would go here</p>
                                <small>Data: @string.Join(", ", dashboardData.LeadsBySegment.Select(kvp => $"{kvp.Key}: {kvp.Value}"))</small>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No data available</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h6 class="mb-0">Reservations by Status</h6>
                    </div>
                    <div class="card-body">
                        @if (dashboardData.ReservationsByStatus != null && dashboardData.ReservationsByStatus.Any())
                        {
                            <div class="text-center text-muted">
                                <i class="fas fa-chart-pie" style="font-size: 4rem; opacity: 0.3;"></i>
                                <p class="mt-2">Chart visualization would go here</p>
                                <small>Data: @string.Join(", ", dashboardData.ReservationsByStatus.Select(kvp => $"{kvp.Key}: {kvp.Value}"))</small>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No data available</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="col-12 mt-3">
                <h5 class="mb-3">Quick Actions</h5>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <button class="btn btn-primary w-100 py-3" @onclick="@(() => Navigation.NavigateTo("/properties"))">
                    <i class="fas fa-home me-2"></i>
                    Manage Properties
                </button>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <button class="btn btn-secondary w-100 py-3" @onclick="@(() => Navigation.NavigateTo("/crm"))">
                    <i class="fas fa-users me-2"></i>
                    CRM & Leads
                </button>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <button class="btn btn-warning w-100 py-3" @onclick="@(() => Navigation.NavigateTo("/reservations"))">
                    <i class="fas fa-calendar-alt me-2"></i>
                    Reservations
                </button>
            </div>

            <div class="col-12 col-sm-6 col-md-3">
                <button class="btn btn-info w-100 py-3" @onclick="@(() => Navigation.NavigateTo("/analytics"))">
                    <i class="fas fa-chart-line me-2"></i>
                    Analytics
                </button>
            </div>

            <!-- Recent Activity -->
            <div class="col-12 col-md-6 mt-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-header">
                        <h6 class="mb-0">Recent Activity</h6>
                    </div>
                    <div class="card-body">
                        @if (dashboardData.RecentActivities != null && dashboardData.RecentActivities.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var activity in dashboardData.RecentActivities.Take(8))
                                {
                                    <div class="list-group-item border-0 px-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                @if (activity.Icon == "Home")
                                                {
                                                    <i class="fas fa-home me-2 text-primary"></i>
                                                }
                                                else if (activity.Icon == "Person")
                                                {
                                                    <i class="fas fa-user me-2 text-secondary"></i>
                                                }
                                                else if (activity.Icon == "BookOnline")
                                                {
                                                    <i class="fas fa-calendar-alt me-2 text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-info-circle me-2 text-info"></i>
                                                }
                                                @activity.Description
                                            </div>
                                            <small class="text-muted">@activity.Date.ToString("MMM dd, HH:mm")</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No recent activity</p>
                        }
                    </div>
                </div>
            </div>

            <!-- Top Properties -->
            <div class="col-12 col-md-6 mt-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-header">
                        <h6 class="mb-0">Top Performing Properties</h6>
                    </div>
                    <div class="card-body">
                        @if (dashboardData.TopProperties != null && dashboardData.TopProperties.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var property in dashboardData.TopProperties)
                                {
                                    <div class="list-group-item border-0 px-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <p class="mb-1">@property.Title</p>
                                                <small class="text-muted">@property.ProjectName | @property.ViewCount views</small>
                                            </div>
                                            @if (property.Status == "Available")
                                            {
                                                <span class="badge bg-success">@property.Status</span>
                                            }
                                            else if (property.Status == "Reserved")
                                            {
                                                <span class="badge bg-warning">@property.Status</span>
                                            }
                                            else if (property.Status == "Sold")
                                            {
                                                <span class="badge bg-info">@property.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@property.Status</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No properties available</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger mt-4" role="alert">
            Failed to load dashboard data. Please try again.
        </div>
    }
</div>

@code {
    private DashboardSummaryDto? dashboardData;
    private bool isLoading = true;
    private string selectedCurrency = "USD";

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardDataAsync();
    }

    private async Task LoadDashboardDataAsync()
    {
        isLoading = true;
        try
        {
            dashboardData = await DashboardService.GetDashboardSummaryAsync(selectedCurrency);
            if (dashboardData == null)
            {
                // TODO: Replace with Bootstrap toast notification
                Console.WriteLine("Failed to load dashboard data");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnCurrencyChanged(ChangeEventArgs e)
    {
        selectedCurrency = e.Value?.ToString() ?? "USD";
        await LoadDashboardDataAsync();
    }

    private string FormatCurrency(double amount)
    {
        var symbol = selectedCurrency switch
        {
            "USD" => "$",
            "EUR" => "€",
            "GBP" => "£",
            "AED" => "د.إ",
            "BHD" => "BD",
            _ => "$"
        };

        if (amount >= 1000000)
            return $"{symbol}{(amount / 1000000):F1}M";
        else if (amount >= 1000)
            return $"{symbol}{(amount / 1000):F1}K";
        else
            return $"{symbol}{amount:F0}";
    }

    private string GetChangeColor(double change)
    {
        return change >= 0 ? "text-success" : "text-danger";
    }


}
