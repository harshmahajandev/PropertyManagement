{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=PropertyHubDb;Username=postgres;Password=your_password_here"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "JWT": {
    "SecretKey": "YourSuperSecretKeyForJWTTokenGeneration-ChangeThisInProduction",
    "Issuer": "PropertyHubGlobal",
    "Audience": "PropertyHubClients",
    "ExpirationInMinutes": 1440
  },
  "OpenAI": {
    "ApiKey": "your-openai-api-key-for-gpt4.1",
    "Model": "gpt-4.1",
    "MaxTokens": 1000
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "Username": "your-email@example.com",
    "Password": "your-app-password",
    "FromEmail": "noreply@propertyhub.com",
    "FromName": "PropertyHub Global"
  },
  "FileStorage": {
    "MaxFileSizeMB": 10,
    "AllowedImageTypes": [ "image/jpeg", "image/png", "image/jpg", "image/webp" ],
    "AllowedDocumentTypes": [ "application/pdf", "application/msword", "application/vnd.openxmlformats-officedocument.wordprocessingml.document" ],
    "StoragePath": "wwwroot/uploads"
  },
  "CurrencyExchange": {
    "ApiUrl": "https://api.exchangerate-api.com/v4/latest/USD",
    "CacheExpirationMinutes": 60
  },
  "Reservation": {
    "DefaultHoldDurationDays": 7,
    "MinDepositPercentage": 5,
    "MaxDepositPercentage": 20,
    "DefaultDepositPercentage": 10
  },
  "PropertyHub": {
    "ApplicationName": "PropertyHub Global",
    "Version": "1.0.0",
    "SupportedCountries": [ "US", "UK", "AE", "CA", "AU", "SG", "JP" ],
    "SupportedCurrencies": [ "USD", "EUR", "GBP", "AED", "CAD", "AUD", "SGD", "JPY" ]
  }
}